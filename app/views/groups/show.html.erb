<a href="/groups">&larr; All Groups</a>
<h1><%= @group.name %> | <a href="/groups/<%= @group.id %>/edit">Edit</a></h1>
<hr />
<h2>Group Users | <a href="/groups/<%= @group.id %>/edit_users">Edit Users</a></h2>
<ul>
  <% @group.users.each do |user| %>
    <li><%= link_to user.name, user_path(user) %></li>
  <% end %>
</ul>
<hr />
<h2>Group Automations | <a href="/groups/<%= @group.id %>/add_automation">Add Automation</a></h2>
<ul>
  <% @group.group_automations.each do |group_automation| %>
    <li>
      <%= group_automation.name %> - <%= group_automation.guide.name %> [<%= link_to 'X', [group_automation], method: :delete, data: { confirm: 'Are you sure you want to delete this Group Automation?' } %>]
      <ul>
        <% group_automation.group_automation_for_users.each do |group_automation_for_user| %>
          <li>Associated on <%= group_automation_for_user.created_at %> to <%= group_automation_for_user.user.name %></li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>