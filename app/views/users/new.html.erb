<a href="/users">&larr; All Users</a>
<h1>New User</h1>
<hr />
<%= form_with scope: :user, url: users_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>